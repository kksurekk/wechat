/**index.wxss**/
.box{
  /* height:250rpx; */
  background:rgb(240, 226, 226);
}
.picture{
  float:left;
  margin-right:20px;
}
.pic{
  width:250rpx;
  height:250rpx;
}
.info{
  padding:20rpx 0;
  width:450rpx;
  /* height:300px; */
  float:left;
  position: relative;
  left:0;
  top:0;

}
.title{
  font-size: 20px;
}
.describe{
  margin:12px 0;
  font-size: 16px;
  color:#666;
}
.price{
  color:#f30;
} 
.btn{
  background:#f30;
  color:#fff;
  position: absolute;
  right:0;
  bottom:20rpx;
  border-radius: 10rpx;
}
.slide-image{
  width: 100%;
  height:400rpx;
}
.banner{
  margin-bottom: 20rpx;
}
.clearfix::after{
  content: '';
  display:block;
  clear: both;
}
.clearfix{
  zoom: 1;
}
.btn--gray{
  font-size: 13px;
  background-color: #ccc;
  border-radius: 10rpx;
}
.btn--red{
  font-size: 13px;
  background-color: red;
  color:#fff;
  border-radius: 10rpx;
}
